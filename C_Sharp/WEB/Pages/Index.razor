@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<p role="status">Secret from Key Vault: @secret</p>

@code {
    private string secret = "";

    protected override void OnInitialized()
    {
        base.OnInitialized();
        
        // Retrieve the secret using the EnvironmentHelper class
        secret = EnvironmentHelper.GetEnvironmentVariable("Secret1");
    }
}
